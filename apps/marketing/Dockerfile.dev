# Development Dockerfile for Marketing Site
FROM node:20-alpine

WORKDIR /app

# Install dependencies
COPY package*.json ./
COPY apps/marketing/package*.json ./apps/marketing/

RUN npm install --legacy-peer-deps

# Copy source code
COPY . .

# Expose port
EXPOSE 5173

# Start development server
WORKDIR /app/apps/marketing
CMD ["npm", "run", "dev"]
